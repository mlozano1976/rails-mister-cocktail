<h1>My Cocktails</h1>

<div class="container">
<div class="index">
<% @cocktails.each do |cocktail| %>
  <h2 class="img">
  <%= link_to cocktail.name, cocktail_path(cocktail) %>
  <%= cl_image_tag cocktail.photo, height: 75, width: 100, crop: :fill %>
  </h2>
<% end %>

<%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>
</div>


